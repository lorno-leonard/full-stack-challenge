{
  "name": "full-stack-challenge",
  "version": "1.0.0",
  "description": "Full Stack NodeJS Challenge",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start_prod": "npm run build --prefix client && NODE_ENV=production node server.js",
    "server": "nodemon -L server.js",
    "client": "CHOKIDAR_USEPOLLING=true npm start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"heroku-postbuild": "YARN_PRODUCTION=FALSE yarn install --cwd client && yarn run build --cwd client"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "mongoose": "^5.2.3",
    "mongoose-paginate": "^5.0.3"
  },
  "devDependencies": {
    "nodemon": "^1.18.2"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "2500"
  }
}
